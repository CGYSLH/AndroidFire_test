<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/news01_image"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/news01_image"
            android:layout_marginLeft="5dp"
            android:text="这是一个测试的的标题"
            android:id="@+id/news01_title"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/news01_content"
            android:layout_alignLeft="@id/news01_title"
            android:layout_below="@id/news01_title"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="这是一个内容的测试的文本主要就是测试文本的使用的"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"

            android:id="@+id/news01_data"
            android:layout_alignBottom="@id/news01_image"
            android:text="日期"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>